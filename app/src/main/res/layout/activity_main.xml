<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/display"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:editable="false"
        android:inputType="none" />

    <!-- Button 7 -->
    <Button
        android:id="@+id/button_7"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:text="7"
        android:tag="7"
        android:onClick="handleDigitClick"/>

    <!-- Button 8 -->
    <Button
        android:id="@+id/button_8"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button_7"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@id/button_7"
        android:text="8"
        android:tag="8"
        android:onClick="handleDigitClick"/>

    <!-- Button 9 -->
    <Button
        android:id="@+id/button_9"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button_8"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@id/button_7"
        android:text="9"
        android:tag="9"
        android:onClick="handleDigitClick"/>

    <!-- Button (/) -->
    <Button
        android:id="@+id/button_div"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/button_erase"
        android:layout_marginEnd="10dp"
        android:layout_alignTop="@id/button_7"
        android:text="/"
        android:tag="/"
        android:onClick="handleOperatorClick"/>

    <!-- Button (<<) -->
    <Button
        android:id="@+id/button_erase"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_alignTop="@id/button_7"
        android:text="&lt;&lt;"
        android:onClick="handleEraseClick"/>

    <!-- Button 4 -->
    <Button
        android:id="@+id/button_4"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:text="4"
        android:tag="4"
        android:onClick="handleDigitClick"/>

    <!-- Button 5 -->
    <Button
        android:id="@+id/button_5"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button_4"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@id/button_4"
        android:text="5"
        android:tag="5"
        android:onClick="handleDigitClick"/>

    <!-- Button 6 -->
    <Button
        android:id="@+id/button_6"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button_5"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@id/button_4"
        android:text="6"
        android:tag="6"
        android:onClick="handleDigitClick"/>

    <!-- Button (x) -->
    <Button
        android:id="@+id/button_mul"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/button_clear"
        android:layout_marginEnd="10dp"
        android:layout_alignTop="@id/button_4"
        android:text="*"
        android:tag="*"
        android:onClick="handleOperatorClick"/>

    <!-- Button (C) -->
    <Button
        android:id="@+id/button_clear"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_alignTop="@id/button_4"
        android:text="C"
        android:onClick="handleClearClick"/>

    <!-- Button 1 -->
    <Button
        android:id="@+id/button_1"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:text="1"
        android:tag="1"
        android:onClick="handleDigitClick"/>

    <!-- Button 2 -->
    <Button
        android:id="@+id/button_2"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button_1"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@id/button_1"
        android:text="2"
        android:tag="2"
        android:onClick="handleDigitClick"/>

    <!-- Button 3 -->
    <Button
        android:id="@+id/button_3"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button_2"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@id/button_1"
        android:text="3"
        android:tag="3"
        android:onClick="handleDigitClick"/>

    <!-- Button (-) -->
    <Button
        android:id="@+id/button_sub"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/button_equals"
        android:layout_marginEnd="10dp"
        android:layout_alignTop="@id/button_1"
        android:text="-"
        android:tag="-"
        android:onClick="handleOperatorClick"/>

    <!-- Button (=) -->
    <Button
        android:id="@+id/button_equals"
        android:layout_width="65dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_alignTop="@id/button_1"
        android:layout_alignBottom="@id/button_dot"
        android:text="="
        android:onClick="handleEqualsClick"/>

    <!-- Button 0 -->
    <Button
        android:id="@+id/button_0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_alignParentStart="true"
        android:layout_alignStart="@id/button_1"
        android:layout_alignEnd="@id/button_2"
        android:layout_marginStart="16dp"
        android:text="0"
        android:tag="0"
        android:onClick="handleDigitClick"/>

    <!-- Button (.) -->
    <Button
        android:id="@+id/button_dot"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button_0"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@id/button_0"
        android:text="."
        android:onClick="handleDotClick"/>

    <!-- Button (+) -->
    <Button
        android:id="@+id/button_add"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/button_equals"
        android:layout_marginEnd="10dp"
        android:layout_alignTop="@id/button_0"
        android:text="+"
        android:tag="+"
        android:onClick="handleOperatorClick"/>


</RelativeLayout>
